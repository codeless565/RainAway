<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgnd"

    tools:context="rainaway.sidm.com.rainaway.Page_MainMenu">

    <ImageView
        android:id="@+id/imageView3"
        android:alpha="0.6"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:src="@drawable/player"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/MenuTitle" />

    <TextView
        android:id="@+id/MenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="RAIN AWAY"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        />

    <!--<Button-->
        <!--android:id="@+id/btn_highscore"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_marginBottom="13dp"-->
        <!--android:background="@drawable/button"-->
        <!--android:text="HighScore"-->
        <!--android:textColor="#EDFFCF"-->
        <!--android:layout_above="@+id/btn_start"-->
        <!--android:layout_alignStart="@+id/btn_start" />-->

    <Button
        android:id="@+id/btn_start"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="Start"
        android:textColor="#EDFFCF"
        android:layout_below="@+id/MenuTitle"
        android:layout_alignStart="@+id/btn_option"
        android:layout_marginTop="200dp" />

    <Button
        android:id="@+id/btn_option"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="Option"
        android:textColor="#EDFFCF"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btn_start"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="Exit"
        android:textColor="#EDFFCF"
        android:layout_below="@+id/btn_option"
        android:layout_alignStart="@+id/btn_option"
        android:layout_marginTop="33dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/nyp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/sidmlogo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp" />


</RelativeLayout>